//------------------------------for loading part-------------------------------
 void loading_graph() { 
    system("cls");
    int bar1=177,bar2=219;
    cout<<"\n\n\t\t\tLoading.......";
    cout<<"\n\n\t\t\t";

    for(int i=0; i<25;i++)
        cout<<(char)bar1;
        cout<<"\r";
        cout<<"\t\t\t\t";
        for(int i=0;i<25;i++){
            cout<<(char)bar2;
            Sleep(200);
        }
 }